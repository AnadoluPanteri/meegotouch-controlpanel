#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
# export DH_VERBOSE=1

	


CFLAGS = -Wall -g --disable-rpath

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

ifneq (,$(findstring debug,$(DEB_BUILD_OPTIONS)))
    QMAKE_ARG += DEFINES+=DEBUG
endif

ifneq (,$(findstring nolauncher,$(DEB_BUILD_OPTIONS)))
    QMAKE_ARG += CONFIG+=DISABLE_LAUNCHER
endif

ifneq (,$(findstring mostused,$(DEB_BUILD_OPTIONS)))
    QMAKE_ARG += CONFIG+=MOSTUSED
endif
ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
    ifneq (,$(findstring arm,$(ARCH)))
        NUMJOBS = 1
    else
        NUMJOBS = $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
    endif
    PARALLEL_MAKEFLAGS += -j$(NUMJOBS)
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp 
	dh_testdir

	DEBIAN_DESTDIR=$(CURDIR)/debian/tmp qmake $(QMAKE_ARG)
	DEBIAN_DESTDIR=$(CURDIR)/debian/tmp $(MAKE) $(PARALLEL_MAKEFLAGS)
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	qmake 2>/dev/null >/dev/null
	$(MAKE) $(PARALLEL_MAKEFLAGS) distclean

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs
    
	INSTALL_ROOT=$(CURDIR)/debian/tmp $(MAKE) install
#	cd lib/tests && ./gen-tests-xml.sh > tests.xml    
	(cd lib;make  $(PARALLEL_MAKEFLAGS) doc; cd ..)
	mkdir -p $(CURDIR)/debian/tmp/usr/share/doc/libduicontrolpanel/api
	cp -r lib/doc/html/*  $(CURDIR)/debian/tmp/usr/share/doc/libduicontrolpanel/api/

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
	dh_install --sourcedir=debian/tmp
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip --dbg-package=duicontrolpanel-dbg
	dh_compress
	dh_fixperms
#	dh_perl
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps 
	dh_gencontrol
	dh_md5sums
	
	dh_builddeb

	# for the security framework
	aegis-deb-add -control debian/duicontrolpanel/DEBIAN/control .. debian/duicontrolpanel.aegis=_aegis

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
