<?xml version='1.0' encoding='UTF-8'?>
<settings>
    <group>
        <text 
            key="/apps/ControlPanel/Example/Text1" 
            title="Example text:" >
          something
        </text>
        <text 
            key="/apps/ControlPanel/Example/Text2" 
            title="Please specify a text:">
        </text>
        <selection key="/apps/ControlPanel/Example/Enum1">
            <option title="first value">1</option>
            <option title="second value">2</option>
            <option title="third value">3</option>
            <option title="fourth value">4</option>
        </selection>
    </group>
    <group>
        <boolean 
            key="/apps/ControlPanel/Example/Bool1" 
            title="Boolean value example">
        </boolean>
        <integer 
            key="/apps/ControlPanel/Example/Integer1"
            title="Select a number" min="30" max="60">
        </integer>
    </group>
    <group>
        <!-- With the following node we can check if MeeGo will tolerate a 
             node attribute before we create an implementation for it. -->
        <text 
            key="/apps/ControlPanel/Example/TextUnsupported1" 
            title="text with promp"
            prompt="The Prompt"/>
        <!-- With the following node we can test if MeeGo will tolerate a 
             sub-node before we create an implementation that actually 
             handles it. -->
        <text 
            key="/apps/ControlPanel/Example/TextUnsupported" 
            title="text with style">
            <property 
                target="label" 
                name="StyleName" 
                type="string"
                value="CommonTitleInverted"/>
        </text>
    </group>
</settings>

